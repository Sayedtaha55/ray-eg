// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Users table - Main user accounts
model User {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String
  phone       String?  @unique
  password    String
  role        UserRole @default(CUSTOMER)
  shopId      String?  @unique
  isActive    Boolean  @default(true)
  lastLogin   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  shop        Shop?    @relation("ShopOwner")
  orders      Order[]
  courierOrders Order[] @relation("CourierOrders")
  messages    Message[]
  reservations Reservation[]
  feedback    Feedback[]
  shopFollows ShopFollower[]
  notifications Notification[]
  preferences NotificationPreference[]

  @@map("users")
}

// Shops table - Merchant shops
model Shop {
  id            String     @id @default(cuid())
  name          String
  slug          String     @unique
  description   String?
  category      ShopCategory
  governorate   String
  city          String
  address       String?
  addressDetailed String?  @map("address_detailed")
  displayAddress String?   @map("display_address")
  mapLabel       String?   @map("map_label")
  latitude      Float?
  longitude     Float?
  locationSource String?   @map("location_source")
  locationAccuracy Float?  @map("location_accuracy")
  locationUpdatedAt DateTime? @map("location_updated_at")
  phone         String
  email         String?
  openingHours  String?    @map("opening_hours")
  logoUrl       String?    @map("logo_url")
  bannerUrl     String?    @map("banner_url")
  status        ShopStatus @default(PENDING)
  pageDesign    Json?      @map("page_design")
  theme         String?    @default("default") // Theme selection
  customColors  Json?      @map("custom_colors") // Custom color scheme
  customFonts   Json?      @map("custom_fonts")  // Custom font settings
  layoutConfig  Json?      @map("layout_config") // Layout preferences
  followers     Int        @default(0)
  visitors      Int        @default(0)
  rating        Float      @default(0)
  isActive      Boolean    @default(true)
  ownerId       String?    @unique
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  // Relations
  owner         User?      @relation("ShopOwner", fields: [ownerId], references: [id])
  products      Product[]
  offers        Offer[]
  orders        Order[]
  messages      Message[]
  notifications Notification[]
  gallery       ShopGallery[]
  analytics     ShopAnalytics[]
  reservations  Reservation[]
  themeSettings ShopTheme[] // Theme settings
  followersList ShopFollower[]

  @@map("shops")
}
model ShopFollower {
  id        String   @id @default(cuid())
  shopId    String   @map("shop_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  shop      Shop     @relation(fields: [shopId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([shopId, userId])
  @@index([shopId])
  @@index([userId])
  @@map("shop_followers")
}

// Products table
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  stock       Int      @default(0)
  category    String   @default("عام")
  imageUrl    String?  @map("image_url")
  addons      Json?
  isActive    Boolean  @default(true)
  shopId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  shop        Shop     @relation(fields: [shopId], references: [id])
  offers      Offer[]
  orderItems  OrderItem[]

  @@map("products")
}

// Offers table
model Offer {
  id          String   @id @default(cuid())
  title       String
  description String?
  discount    Float    @default(0)
  oldPrice    Float    @map("old_price")
  newPrice    Float    @map("new_price")
  imageUrl    String?  @map("image_url")
  expiresAt   DateTime @map("expires_at")
  isActive    Boolean  @default(true)
  productId   String?  @map("product_id")
  shopId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  product     Product? @relation(fields: [productId], references: [id])
  shop        Shop     @relation(fields: [shopId], references: [id])

  @@map("offers")
}

// Orders table
model Order {
  id            String      @id @default(cuid())
  total         Float
  status        OrderStatus @default(PENDING)
  paymentMethod String?     @map("payment_method")
  paymentStatus String?     @map("payment_status")
  notes         String?
  userId        String
  shopId        String
  courierId     String?     @map("courier_id")
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  user          User        @relation(fields: [userId], references: [id])
  shop          Shop        @relation(fields: [shopId], references: [id])
  courier       User?       @relation("CourierOrders", fields: [courierId], references: [id])
  items         OrderItem[]
  notifications Notification[]

  @@map("orders")
}

// Order items table
model OrderItem {
  id        String @id @default(cuid())
  orderId   String @map("order_id")
  productId String @map("product_id")
  quantity  Int
  price     Float
  addons    Json?

  // Relations
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

// Messages table - Chat system
model Message {
  id         String      @id @default(cuid())
  content    String
  senderId   String      @map("sender_id")
  senderName String      @map("sender_name")
  role       MessageRole
  shopId     String      @map("shop_id")
  isRead     Boolean     @default(false) @map("is_read")
  createdAt  DateTime    @default(now()) @map("created_at")

  // Relations
  shop       Shop        @relation(fields: [shopId], references: [id])
  sender     User        @relation(fields: [senderId], references: [id])

  @@map("messages")
}

// Notifications table
model Notification {
  id        String   @id @default(cuid())
  title     String
  content   String
  type      String
  shopId    String   @map("shop_id")
  userId    String?  @map("user_id")
  orderId   String?  @map("order_id")
  isRead    Boolean  @default(false) @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  shop      Shop     @relation(fields: [shopId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])
  order     Order?   @relation(fields: [orderId], references: [id])

  @@map("notifications")
}

model NotificationPreference {
  id            String   @id @default(cuid())
  userId        String   @map("user_id")
  emailEnabled  Boolean  @default(true) @map("email_enabled")
  smsEnabled    Boolean  @default(false) @map("sms_enabled")
  pushEnabled   Boolean  @default(true) @map("push_enabled")
  inAppEnabled  Boolean  @default(true) @map("in_app_enabled")
  typeSettings  Json?    @map("type_settings")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  user          User     @relation(fields: [userId], references: [id])

  @@unique([userId])
  @@map("notification_preferences")
}

// Reservations table
model Reservation {
  id            String           @id @default(cuid())
  itemId        String           @map("item_id")
  itemName      String           @map("item_name")
  itemImage     String?          @map("item_image")
  itemPrice     Float            @map("item_price")
  extras        Json?
  shopId        String           @map("shop_id")
  shopName      String           @map("shop_name")
  customerName  String           @map("customer_name")
  customerPhone String           @map("customer_phone")
  status        ReservationStatus @default(PENDING)
  createdAt     DateTime         @default(now()) @map("created_at")
  updatedAt     DateTime         @updatedAt

  // Relations
  shop          Shop             @relation(fields: [shopId], references: [id])
  customer      User             @relation(fields: [customerPhone], references: [phone])

  @@map("reservations")
}

// Feedback table
model Feedback {
  id         String   @id @default(cuid())
  content    String
  userName   String   @map("user_name")
  userEmail  String   @map("user_email")
  rating     Int?
  status     String   @default("pending")
  createdAt  DateTime @default(now()) @map("created_at")

  // Relations
  user       User     @relation(fields: [userEmail], references: [email])

  @@map("feedback")
}

// Shop gallery table
model ShopGallery {
  id        String   @id @default(cuid())
  shopId    String   @map("shop_id")
  imageUrl  String   @map("image_url")
  mediaType MediaType @default(IMAGE) @map("media_type")
  thumbUrl  String?  @map("thumb_url")
  mediumUrl String?  @map("medium_url")
  caption   String?
  duration  Int?     @map("duration") // Video duration in seconds
  fileSize  BigInt?  @map("file_size") // File size in bytes
  isHero    Boolean  @default(false) @map("is_hero") // Is this the hero video?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  shop      Shop     @relation(fields: [shopId], references: [id])

  @@map("shop_gallery")
}

// Shop analytics table
model ShopAnalytics {
  id            String   @id @default(cuid())
  shopId        String   @map("shop_id")
  date          DateTime @default(now())
  revenue       Float    @default(0)
  ordersCount   Int      @default(0) @map("orders_count")
  visitorsCount Int      @default(0) @map("visitors_count")
  followersCount Int     @default(0) @map("followers_count")

  // Relations
  shop          Shop     @relation(fields: [shopId], references: [id])

  @@map("shop_analytics")
}

// Shop themes table
model ShopTheme {
  id          String   @id @default(cuid())
  shopId      String   @map("shop_id")
  name        String   // Theme name
  primary     String   @default("#00E5FF") // Primary color
  secondary   String   @default("#BD00FF") // Secondary color
  accent      String   @default("#000000") // Accent color
  background  String   @default("#FFFFFF") // Background color
  text        String   @default("#000000") // Text color
  fontFamily  String   @default("Inter") // Font family
  borderRadius String  @default("1rem") // Border radius
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  shop        Shop     @relation(fields: [shopId], references: [id])

  @@map("shop_themes")
}

// Theme templates table (predefined themes)
model ThemeTemplate {
  id          String   @id @default(cuid())
  name        String   @unique
  displayName String  @map("display_name")
  description String?
  category    String   // modern, classic, minimal, etc.
  primary     String   @default("#00E5FF")
  secondary   String   @default("#BD00FF")
  accent      String   @default("#000000")
  background  String   @default("#FFFFFF")
  text        String   @default("#000000")
  fontFamily  String   @default("Inter")
  borderRadius String  @default("1rem")
  preview     String?  @map("preview") // Preview image URL
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  @@map("theme_templates")
}

// Enums
enum UserRole {
  CUSTOMER
  MERCHANT
  ADMIN
}

enum ShopCategory {
  RETAIL
  RESTAURANT
  SERVICE
  ELECTRONICS
  FASHION
  FOOD
  HEALTH
  OTHER
}

enum ShopStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  DELIVERED
  CANCELLED
  REFUNDED
}

enum MediaType {
  IMAGE
  VIDEO
}

enum MessageRole {
  CUSTOMER
  MERCHANT
  SYSTEM
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}
